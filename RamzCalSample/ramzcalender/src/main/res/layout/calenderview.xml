<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2196f3"
    android:id="@+id/background"
    >
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="60dp"

    >


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:textSize="20sp"
        android:layout_centerInParent="true"
        android:textColor="@android:color/white"
        android:text=""
        android:id="@+id/monthTv"
        android:gravity="center"
        android:onClick="gos"
        android:textStyle="bold"/>

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:textSize="15sp"
        android:textColor="@android:color/white"

        android:src="@drawable/down"
        android:layout_toRightOf="@+id/monthTv"
        android:layout_centerInParent="true"

        android:text="Now"
        android:id="@+id/arrow"
        android:gravity="center"
        />




    <TextView
        android:layout_width="70dp"
        android:layout_height="40dp"
        android:textSize="15sp"
        android:layout_centerInParent="true"
        android:textColor="@android:color/white"

        android:background="@drawable/ovel"
        android:layout_toRightOf="@+id/arrow"
        android:layout_marginLeft="10dp"
        android:text="Now"
        android:id="@+id/nowTv"
        android:gravity="center"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"

        />

    </RelativeLayout>

<View
    android:layout_width="match_parent"
    android:layout_height="1dp"

    android:background="@android:color/white"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:orientation="horizontal"
        android:layout_marginTop="2dp">


        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:layout_centerInParent="true"
                android:textColor="@android:color/white"
                android:id="@+id/week_sunday"
                android:text="Sun"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
           >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:layout_centerInParent="true"
                android:textColor="@android:color/white"
                android:id="@+id/week_monday"

                android:text="Mon"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:layout_centerInParent="true"
                android:textColor="@android:color/white"
                android:id="@+id/week_tuesday"


                android:text="Tue"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
           >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"

                android:layout_centerInParent="true"
                android:textColor="@android:color/white"
                android:id="@+id/week_wednesday"

                android:text="Wed"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:layout_centerInParent="true"
                android:textColor="@android:color/white"
                android:id="@+id/week_thursday"

                android:text="Thu"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:layout_centerInParent="true"
                android:textColor="@android:color/white"
                android:id="@+id/week_friday"

                android:text="Fri"
               />
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:layout_centerInParent="true"
                android:id="@+id/week_saturday"

                android:textColor="@android:color/white"
                android:text="Sat"
                />
        </RelativeLayout>
        
        
        </LinearLayout>
    <android.support.v4.view.ViewPager
        android:id="@+id/vp_pages"
        android:layout_width="match_parent"
        android:layout_height="50dp"
       />

</LinearLayout>